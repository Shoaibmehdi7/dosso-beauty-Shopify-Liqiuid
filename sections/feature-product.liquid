{%- liquid assign product = section.settings.product %}
<section class="featured-product" style="background-color:{{ section.settings.bgc }};{% if section.settings.bg %}background-image:url({{ section.settings.bg | img_url:'master' }});{% endif %}">
  <div class="container">
    <div class="row align-items-center {% if section.settings.right == true %} image-right {% endif %}">
      {% if section.settings.right == false %}
      <div class="col-md-5">
        <div class="featured-product-box">
          <div class="box-price">
            {%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: true,
                    price_class: 'price--large'
                  -%}
          </div>
          <div class="product-box-image">
            <a href="{{ product.url }}"><img src="{{ product.featured_image.src | product_img_url: '300x300' }}" alt="{{ product.title }}"></a>
          </div>
          <div class="product-box-content">
            {{ product.title | escape }}
          </div>
        </div>
      </div>
        {% endif %}
      <div class="col-md-6">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.content }}</p>
        <a href="{{ product.url }}" class="feature-btn"><span>Shop Now</span></a>
      </div>
      {% if section.settings.right == true %}
      <div class="col-md-6">
        <div class="featured-product-box">
          <div class="box-price">
            {%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: true,
                    price_class: 'price--large'
                  -%}
          </div>
          <div class="product-box-image">
            <a href="{{ product.url }}"><img src="{{ product.featured_image.src | product_img_url: '300x300' }}" alt="{{ product.title }}"></a>
          </div>
          <div class="product-box-content">
            {{ product.title | escape }}
          </div>
        </div>
      </div>
        {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Featured Product",
    "settings": [
      {
      "type": "checkbox",
      "id": "right",
      "label": "Product Right",
      "default": false
    },
      {
      "type": "product",
      "id": "product",
      "label": "Select Product"
    },
      {
      "type": "image_picker",
      "id": "bg",
      "label": "Section Background"
    },
      {
      "type": "color",
      "id": "bgc",
      "label": "Section Background"
    },
      {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
      {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    }
    ],
    "presets": [
      {
        "name": "Featured Product"
  }
      ]
  }
{% endschema %}

