<section class="product-icon-box" style="background:url({{ section.settings.bg | img_url:'master' }});">
    <div class="container">
        <h2>{{ section.settings.heading }}</h2>
        <div class="icon-box-wrapper">
            {% for block in section.blocks %}
            <div class="product-icon">
                <img src="{{ block.settings.icon-image | img_url:'master' }}" alt="">
                <h3>{{ block.settings.icon-heading }}</h3>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
  {
    "name": "Client Satisfication",
    "settings": [
      {
       "type": "image_picker",
       "id": "bg",
       "label": "Background"
     },
     {
       "type": "text",
       "id": "heading",
       "label": "Title"
     }
    ],
    "blocks": [
       {
         "name": "Icon Box",
         "type": "slide",
         "settings": [
           {
             "type": "image_picker",
             "id": "icon-image",
             "label": "Select Icon"
           },
           {
             "type": "text",
             "id": "icon-heading",
             "label": "Box Title"
           }
         ]
       }
     ],
    "presets": [
      {
        "name": "Client Satisfication"
  }
      ]
  }
{% endschema %}

