<section class="braidner-text" {% if section.settings.img %}style="background-image: url({{ section.settings.img | img_url:'master' }});"{% endif %}>
  <div class="container">
      <h2>{{ section.settings.heading }}</h2>
      {% if section.settings.content != '' %}
        <p>{{ section.settings.content }}</p>
      {% endif %}
      {% if section.settings.btn-text != '' %}
      <a href="{{ section.settings.btn-url }}" class="btn-first">{{ section.settings.btn-text }}</a>
      {% endif %}
  </div>
</section>
{% schema %}
  {
    "name": "Text Section",
    "settings": [
    {
      "type": "image_picker",
      "id": "img",
      "label": "Background"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "btn-text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn-url",
      "label": "Button URL"
    }
    ],
    "presets": [
      {
        "name": "Text Section"
  }
      ]
}
{% endschema %}

