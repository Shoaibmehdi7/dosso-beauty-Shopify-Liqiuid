<section class="sustainability-section" {% if section.settings.img %}style="background-image: url({{ section.settings.img | img_url:'master' }});"{% endif %}>
  <div class="container">
    {% if section.settings.heading != '' %}
    <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.content != '' %}
    <p>{{ section.settings.content }}</p>
    {% endif %}
    {% if section.settings.btn-text != '' %}
    <a href="{{ section.settings.btn-url }}" class="btn-first">{{ section.settings.btn-text }}</a>{% endif %}
    <div class="icon-box-wrapper">
      {% for block in section.blocks %}
      <div class="icon-box">
        <img src="{{ block.settings.icon-image | img_url:'master' }}" alt="">
        <h3>{{ block.settings.icon-heading }}</h3>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Icon Boxes",
    "settings": [
    {
      "type": "image_picker",
      "id": "img",
      "label": "Background"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "btn-text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn-url",
      "label": "Button URL"
    }
    ],
    "blocks": [
       {
         "name": "Icon Box",
         "type": "slide",
         "settings": [
           {
             "type": "image_picker",
             "id": "icon-image",
             "label": "Select Icon"
           },
           {
             "type": "text",
             "id": "icon-heading",
             "label": "Box Title"
           }
         ]
       }
     ],
    "presets": [
      {
        "name": "Icon Boxes"
  }
      ]
}
{% endschema %}

